" 设置剪切板 与系统相通
set clipboard+=unnamed
"为IdeaVim插件增加自动切换为英文输入法的功能
set keep-english-in-normal
"把leader设置为空格
let mapleader = ' '
" 启用vim surround功能
set surround
"搜索忽略大小写 智能匹配大小写
set ignorecase
set smartcase
set insearch
set hlsearch
" 左下角显示当前模式
set showmode
" 显示行号
set number
set relativenumber
" 保持5行在屏幕底部
set scrolloff=5
" 保持10列代码在右边
set sidescroll=10
set history=100000

set ideajoin

"move line up or downC
nnoremap <A-j> :m .+1<CR>==
nnoremap <A-k> :m .-2<CR>==
vnoremap <a-j> :'<,'>m +1<cr>==
vnoremap <a-k> :'<,'>m -2<cr>==
" Insert mode shortcut
inoremap <C-j> <Down>
inoremap <C-k> <Up>
" Quit visual mode
vnoremap v <Esc>
" Quit insert mode
inoremap jj <Esc>
inoremap jk <Esc>
inoremap kk <Esc>
" Move to the start of line
nnoremap H ^
vnoremap H ^
" Moveto the end of line
nnoremap L $
vnoremap L $
" built in search looks better
nnoremap / :action Find<CR>
" space keymap
nnoremap <space>== :ReformatCode<cr>
noremap <Space>/ /
nnoremap <space>fp :action FindInPath<cr>
nnoremap <space>ga :action GotoAction<cr>
nnoremap <Space>gc :action GotoClass<CR>
noremap <space>gd :action GotoDeclaration<CR>
noremap <space>gi :action GotoImplementation<CR>
noremap <space>gs :action GotoSuperMethod<CR>
nnoremap <space>fu :action FindUsages<CR>
nnoremap <space>re :action RenameElement<CR>
nnoremap <c-s-j> gT
nnoremap <c-s-k> gt
nnoremap <c-CR> :action EditorSplitLine<cr>
nnoremap <c-s-CR> :action EditorStartNewLineBefore<cr>
noremap <c-s-h> :action Back<CR>
noremap <c-s-l> :action Forward<CR>
nnoremap <space>E :action Switcher<cr>
nnoremap <space>q :action CloseContent<cr>
nnoremap <space>Q :action ReopenClosedTab<cr>
" idea actions
nmap <c-i> :action ShowIntentionActions<cr>
imap <c-i> <Esc>:action ShowIntentionActions<cr>
imap <ctrl><cr> :action EditorCompleteStatement <cr>
"debugger
nnoremap <space>tlbp :action ToggleLineBreakpoint<CR>
nnoremap <space>sep :action ShowExecutionPoin<CR>
" 关闭(close)其他的窗口 只剩下vim编辑区域
nnoremap <leader>w :action HideAllWindows<CR>
"显示javadoc
nnoremap sjd :action QuickJavaDoc<CR>


 
