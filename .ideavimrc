" 设置剪切板 与系统相通
set clipboard+=unnamed

"为IdeaVim插件增加自动切换为英文输入法的功能
set keep-english-in-normal

" 启用vim surround功能
set surround
" 搜索忽略大小写 智能匹配大小写
set ignorecase
set smartcase
set insearch
set hlsearch

" 左下角显示当前模式
set showmode

" 显示行号
set number
set relativenumber

" 保持5行在屏幕底部
set scrolloff=5

" 保持10列代码在右边
set sidescroll=20
set history=100000
set ideajoin
set easymotion
set timeoutlen=1000 ttimeoutlen=0

nmap <c-h> <c-w>h
nmap <c-l> <c-w>l
nmap <c-j> <c-w>j
nmap <c-k> <c-w>k

" tabs
nmap <c-s-h> gT
nmap <c-s-l> gt

" Quit visual mode
vmap v <Esc>

" Quit insert mode
imap jj <Esc>
imap jk <Esc>
imap kk <Esc>

" built in search looks better
nmap / :action Find<CR>

" space keymap
nmap <space>== :action ReformatCode<cr>
nmap <space>/ /

" code navigation
nmap sp :action FileStructurePopup<cr>
nmap fp :action FindInPath<cr>
nmap ga :action GotoAction<cr>
vmap ga :action GotoAction<cr>
nmap gc :action GotoClass<CR>
nmap gd :action GotoDeclaration<CR>
nmap gi :action GotoImplementation<CR>
nmap gf :action GotoFile<CR>
nmap gs :action GotoSuperMethod<CR>
nmap fu :action FindUsages<CR>
nmap <c-o> :action Back<CR>
nmap <c-i> :action Forward<CR>


" code refactoring
nmap re :action RenameElement<CR>

" idea actions
nmap <c-u> :action ShowIntentionActions<cr>
imap <c-u> <Esc> :action ShowIntentionActions<cr>
imap <ctrl><cr> :action EditorCompleteStatement <cr>
imap <c-v> <esc>:action $Paste<cr>a

"debugger
nmap <space>bp :action ToggleLineBreakpoint<CR>

" translation
nmap <space>o :action $EditorTranslateAction<CR>
vmap <space>o :action $EditorTranslateAction<CR>

" windows actions
nmap <space>E :action Switcher<cr>
nmap <space>w :action HideAllWindows<CR>
nmap <space>nw :action NextProjectWindow<cr>
nmap <space>pw :action PreviousProjectWindow<cr>
nmap <space>ow :action OpenProjectWindows<CR>

" comment
nmap <c-/> :action CommentByLineComment<cr>
vmap <c-/> :action CommentByBlockComment<cr>

" javadoc
nmap qj :action QuickJavaDoc<CR>
nmap qi :action QuickImplementations<cr>
